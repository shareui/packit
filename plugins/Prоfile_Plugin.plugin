def validate_hex_color(color_str):
    color_str = color_str.strip()
    if color_str.startswith("#"):
        color_str = color_str[1:]
    if len(color_str) == 6:
        try:
            int(color_str, 16)
            return "#" + color_str
        except ValueError:
            pass
    return None

